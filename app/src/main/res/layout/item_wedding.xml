<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:foreground="#00000000" >


    <TextView
        android:id="@+id/item_husband_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="husband: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/item_husband_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="husband name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/item_husband_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/item_wife_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_husband_name"
        android:text="wife: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/item_wife_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_husband_name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/item_wife_title"
        android:text="wife name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14.05.18"
        android:layout_below="@id/item_wife_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />



</RelativeLayout>